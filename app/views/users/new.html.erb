<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label '아이디' %>
      <%= f.text_field :login_id %>

      <%= f.label '비밀번호' %>
      <%= f.password_field :password %>

      <%= f.label '비밀번호 확인'%>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "계정 생성", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>